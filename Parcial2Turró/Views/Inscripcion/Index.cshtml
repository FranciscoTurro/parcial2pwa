@model Parcial2Turró.Models.Inscripcion

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Crear" asp-controller="Inscripcion" method="post">
            <div class="mb-2">
                <label class="form-label">Materia</label>
                <select asp-for="Idmateria" asp-items="@ViewBag.materias" class="form-control">
                    <option value="">Seleccionar</option>
                </select>
            </div>
            <div class="mb-2">
                <label class="form-label">Alumno</label>
                <select asp-for="Dnialumno" asp-items="@ViewBag.alumnos" class="form-control">
                    <option value="">Seleccionar</option>
                </select>
            </div>
            <div class="mb-2 errors" style="color:red">
                <span>@ViewBag.ERROR</span>
            </div>
            <div class="mb-2">
                <button class="btn btn-primary" type="submit">Inscribir</button>
                <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>
